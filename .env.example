GONNAENOSAYTHAT_DB_NAME=gonnaenosaythat
GONNAENOSAYTHAT_DB_USER=gonnaenosaythat
GONNAENOSAYTHAT_SECRET_KEY=niapcinimod
GONNAENOSAYTHAT_WORKERS=2
DB_PASSWORD=gonnaenosaythat
# API Keys
OPENAI_API_KEY=<key>
ANTHROPIC_API_KEY=<key>
SECRET_KEY=<key>
# Database
# Payment Configuration
##Email stuff
MAIL_SERVER=email-smtp.eu-west-1.amazonaws.com
MAIL_USERNAME=<key>
MAIL_PASSWORD=<key>
MAIL_DEFAULT_SENDER=>key>
SUPPORT_EMAIL=>key>
# Flask Configuration
ENVIRONMENT=dev
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
S3_BUCKET=>key>

CACHE_ENCRYPTION_KEY=>key>
FLASK_ENV='dev'

# RabbitMQ credentials (currently using defaults in docker-compose)
RABBITMQ_USER=>key>
RABBITMQ_PASS=>key>

# Celery broker URL (defaults to guest:guest in docker-compose)
CELERY_BROKER_URL=amqp://<uname>:<pass>@rabbitmq:5672/%2F

# Optional but recommended
CELERY_RESULT_BACKEND=rpc://


# Redis (explicitly set, though docker-compose has default)
REDIS_URL=redis://redis:6379/0

# Session cookie settings (docker-compose has defaults)
SESSION_COOKIE_DOMAIN=.>key>
SESSION_COOKIE_SECURE=True

# Email port settings (docker-compose defaults to 587)
MAIL_PORT=587
MAIL_USE_TLS=True
RECAPTCHA_ENABLED=true
RECAPTCHA_SITE_KEY=>key>
RECAPTCHA_SECRET_KEY=>key>
